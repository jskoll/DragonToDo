{
  "name": "dragon-todo",
  "version": "1.0.0",
  "main": "dist/main/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "concurrently \"npm run start:renderer\" \"wait-on http://localhost:3000 && npm run start:electron\"",
    "start": "concurrently \"npm run start:renderer\" \"wait-on http://localhost:3000 && npm run start:electron\"",
    "start:renderer": "vite",
    "start:electron": "cross-env NODE_ENV=development electron .",
    "build": "npm run build:renderer && npm run build:main && npm run build:preload",
    "build:renderer": "vite build",
    "build:main": "tsc --project tsconfig.main.json",
    "build:preload": "tsc --project tsconfig.preload.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "tsc --noEmit",
    "generate-icons": "node scripts/generate-icons.js",
    "package": "npm run generate-icons && npm run build && electron-builder",
    "package:dir": "npm run generate-icons && npm run build && electron-builder --dir",
    "package:all": "npm run generate-icons && npm run build && electron-builder --mac --win --linux",
    "package:mac": "npm run generate-icons && npm run build && electron-builder --mac",
    "package:win": "npm run generate-icons && npm run build && electron-builder --win",
    "package:linux": "npm run generate-icons && npm run build && electron-builder --linux",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "todo",
    "todo.txt",
    "productivity",
    "electron",
    "typescript",
    "encryption",
    "privacy"
  ],
  "author": "DragonToDo",
  "license": "MIT",
  "description": "A modern, fully-typed Electron app for managing encrypted todo.txt files with Nord theme",
  "build": {
    "appId": "com.dragontodo.manager",
    "productName": "DragonToDo",
    "publish": [
      {
        "provider": "github",
        "owner": "jskoll",
        "repo": "DragonToDo"
      }
    ],
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "assets/**/*",
      "package.json"
    ],
    "extraResources": [
      "assets/logo.png",
      "assets/icon.svg"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "default",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/logo.png",
      "hardenedRuntime": true,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/logo.png",
      "publisherName": "DragonToDo",
      "verifyUpdateCodeSignature": false
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/logo.png",
      "category": "Office",
      "maintainer": "DragonToDo <noreply@dragontodo.dev>",
      "desktop": {
        "Name": "DragonToDo",
        "Comment": "Encrypted todo.txt manager with Nord theme",
        "Keywords": "todo;productivity;gtd;encryption;"
      }
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "DragonToDo"
    }
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/crypto-js": "^4.2.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.1",
    "@vitejs/plugin-react": "^4.7.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "electron": "^38.0.0",
    "electron-builder": "^26.0.12",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "sass": "^1.92.0",
    "sharp": "^0.34.3",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "vite": "^6.3.5",
    "wait-on": "^8.0.4"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.2",
    "@mui/material": "^7.3.2",
    "@mui/system": "^7.3.2",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@types/uuid": "^10.0.0",
    "crypto-js": "^4.2.0",
    "electron-updater": "^6.6.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "uuid": "^11.1.0"
  }
}
